<%= form_for [:journal, @entry] do |f| %>

  <div class="form-group">
    <%= f.label :entry_date %>
    <%= f.date_field :entry_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :entry_title %>
    <%= f.text_field :entry_title, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :tag_list, "Tags (separated by commas)" %><br />
    <%= f.text_field :tag_list %>
  </div>

  <div class="actions">
    <%= f.submit "Add This Entry", class: "btn btn-primary btn-sm" %>
  </div>

<% end %>
