<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Welcome to Life In Journal</h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3>Read any of the journals below</h3>
      <% @journals.each do |journal|  %>
      <div class="row add-margin">
        <div class="col-md-4"><%= journal.journal_title %></div>
        <div class="col-md-4"><%= journal.user.email %></div>
        <div class="col-md-2"><%= link_to "View this Journal", journal_entries_path(journal) %></div>
        <% if current_user %>
        <div class="col-md-2"><%= link_to "Edit this Journal", edit_journal_path(journal) %></div>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>
