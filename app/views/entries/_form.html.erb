<h2>New Entry </h2>

<%= form_for ([@journal, @entry]) do |f| %>

  <div class="form-group">
    <%= f.label :entry_title %>
    <%= f.text_field :entry_title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :entry_date %>
    <%= f.date_field :entry_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control description-height", maxlength: 1000 %>
  </div>

  <div class="form-group">
    <%= f.label :tag_list, "Tags (separate by commas)" %>
    <%= f.text_field :tag_list, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-primary btn-sm" %>
  </div>

<% end %>
